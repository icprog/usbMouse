record(bi, "$(P)$(R)B0")
{
    field(DESC, "USB Mouse button 0")
    field(DTYP, "asynInt32")
    field(SCAN, "I/O Intr")
    field(INP,  "@asyn($(PORT) 0 0)")
    field(ZNAM, "Off")
